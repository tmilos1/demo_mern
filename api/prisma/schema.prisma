datasource DS {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = env("BINARY_TARGET")
}

model Post {
  id         Int       @default(autoincrement()) @id
  title      String
  body       String
  createdAt  DateTime  @default(now())
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Category {
  id    Int    @default(autoincrement()) @id
  name  String
  posts Post[]
}

model Contact {
  id        Int      @default(autoincrement()) @id
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}
